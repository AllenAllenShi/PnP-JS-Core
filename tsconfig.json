{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "jsx": "react",
        "declaration": false,
        "sourceMap": true,
        "removeComments": false,
        "types": [
            "sharepoint"
        ],
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ]
}
